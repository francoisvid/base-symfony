{% extends 'base.html.twig' %}

{% block body %}
    <body>
    <div class="d-flex justify-content-center inscription">
        <div class="col-md-6">
            <div class="card border-secondary" style="margin-top: 80px">
                <h3 class="card-header text-center connexion">Connexion</h3>
                <div class="notif">
                    {% for label, flashes in app.session.flashbag.all %}
                        {% for flash in flashes %}
                            {% if ( label == 'success' ) %}
                                <div class="alert alert-success alert-dismissible fade show">
                                    <p class="text-center mb-0">{{ flash }}</p>
                                </div>
                            {% elseif ( label == 'error' ) %}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <p class="text-center mb-0">{{ flash }} cherche un peu ðŸ™ˆ</p>
                                </div>
                            {% else %}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <p class="text-center mb-0">{{ flash }}</p>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                </div>
                <div class="card-body">
                    <form action="{{ path('security_login') }}" method="post">
                        <fieldset>
                            <div class="form-group">
                                <label for="username">Email</label>
                                <input type="text" id="username" name="_username" value="" class="form-control" placeholder="Email"/>
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe"/>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <button type="submit" class="btn btn-primary btnConnexion btn-sm" style="margin-left: 5px; float: right">
                                Connexion
                            </button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}